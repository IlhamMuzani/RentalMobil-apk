<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fsdf"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kelompok4.ijournal.Tentang">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Kontak Developer"
            android:textSize="18sp"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="NAMA : KHAERUL ANAM"
            android:textAlignment="center"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="NIM : 17090099"
            android:textAlignment="center"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:fontFamily="@font/quicksand_medium"
            android:layout_marginTop="19dp"
            android:text="PRODI : D IV TEKNIK INFORMATIKA"
            android:textAlignment="center"
            android:textSize="18sp" />
        <TextView
            android:layout_margin="300dp"
            android:fontFamily="@font/quicksand_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright : @2021"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp" />
    </RelativeLayout>

</ScrollView>