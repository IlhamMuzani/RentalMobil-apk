<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/crv_selesai"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/detailselesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

<!--        <TextView-->
<!--            android:id="@+id/txvOptionselesai"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:paddingEnd="@dimen/_2sdp"-->
<!--            android:text="&#8942;"-->
<!--            android:textAppearance="?android:textAppearanceLarge"-->
<!--            android:textColor="@color/black"-->
<!--            android:textStyle="bold" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txvtransaksiSelesai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_toEndOf="@+id/btn_norek"
                        android:text="Nama Mobil"
                        android:textStyle="bold"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/txv_tanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/btn_norek"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="Tanggal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txvKategoriselesai"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Kategori"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/hargaselesai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/btn_jenisbank"
                            android:gravity="end"
                            android:text="Harga"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>