<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/light"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dip" >

        <!--  Name Label -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#0E0E0E"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand_medium"
            android:text="Nama:" />
        <!--  Name TextField -->
        <EditText
            android:id="@+id/nama"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="#0E0E0E" />

        <!--  Name Label -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Alamat:"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="#0E0E0E" />
        <!--  Name TextField -->
        <EditText
            android:id="@+id/alamat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="#0E0E0E" />

        <!--  Name Label -->
        <TextView
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="No Handphone:"

            android:textColor="#0E0E0E" />
        <!--  Name TextField -->
        <EditText
            android:id="@+id/telpon"
            android:layout_width="fill_parent"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="#0E0E0E" />
        <TextView
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Tanggal Kembali:"

            android:textColor="#0E0E0E" />
        <!--  Name TextField -->
        <DatePicker
            android:id="@+id/tglkembali"
            android:layout_width="350dp"
            android:datePickerMode="calendar"
            android:layout_height="350dp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="#0E0E0E" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#0E0E0E"
            android:fontFamily="@font/quicksand_medium"
            android:text="Asal :" />

        <!--  Name TextField -->
        <Spinner android:id="@+id/spinProp"
            android:layout_width="fill_parent"
            android:textColor="#0E0E0E"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#0E0E0E"
            android:fontFamily="@font/quicksand_medium"
            android:text="Tujuan :" />

        <Spinner android:id="@+id/spinKab"
            android:layout_width="fill_parent"
            android:textColor="#CAD3C8"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/proses"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="@drawable/buttons4"
            android:textColor="#000000"
            android:fontFamily="@font/quicksand_medium"
            android:textStyle="bold"
            android:text="Simpan" />

        <TextView android:id="@+id/TextSpin1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/TextSpin2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>
